{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Blog API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_USER": "blog_user",
                "DB_PASSWORD": "blog_password",
                "DB_NAME": "blog_db",
                "DB_SSLMODE": "disable",
                "POSTGRES_DB": "blog_db",
                "POSTGRES_USER": "blog_user",
                "POSTGRES_PASSWORD": "blog_password",
                "JWT_SECRET": "secret"
            }
        }
    ]
}